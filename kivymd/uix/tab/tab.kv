<MDTabs>
    size_hint_y: None

    canvas.before:
        Color:
            rgba:
                self.md_bg_color \
                if self.md_bg_color and self.theme_bg_color == "Custom" else \
                self.theme_cls.surfaceColor
        Rectangle:
            pos: self.pos
            size: self.size

    MDTabsScrollView:
        id: tab_scroll
        bar_width: 0

        GridLayout:
            id: container
            rows: 1
            size_hint: None, None
            width: self.minimum_width
            height: root.height


<MDTabsItemIcon>
    pos_hint: {"center_x": .5}
    theme_icon_color: "Custom"
    icon_color: self.theme_cls.onSurfaceVariantColor


<MDTabsItemLabel>
    adaptive_size: True
    pos_hint: {"center_x": .5}
    padding_x: "36dp"
    theme_text_color: "Custom"
    text_color: self.theme_cls.onSurfaceVariantColor


<MDTabsItem>
    orientation: "vertical"
    size_hint: None, None
    height: self.minimum_height
    spacing: "4dp"
    padding: 0, "8dp", 0, "8dp"


